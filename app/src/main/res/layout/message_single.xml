<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtDate"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:visibility="visible">


    <RelativeLayout
        android:id="@+id/flayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_msg_from"
        android:gravity="left"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtMsgFrom"
            android:layout_alignRight="@+id/txtMsgFrom"
            android:layout_below="@+id/txtMsgFrom"
            android:layout_gravity="bottom|right"

            android:padding="4dp"
            android:paddingRight="5dp"
            android:text="Time"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtMsgFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|center_vertical"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/message_bg"

            android:maxEms="12"
            android:maxLines="10"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="kdfjhgjfhf"
            android:textColor="#17202A"
            android:textSize="20sp" />
        </FrameLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/flayout1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:background="@drawable/bg_msg_from"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTimeFrom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtMsgFrom1"
            android:layout_alignRight="@+id/txtMsgFrom1"
            android:layout_below="@+id/txtMsgFrom1"
            android:layout_gravity="bottom|right"

            android:padding="4dp"
            android:paddingRight="5dp"
            android:text="Time"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtMsgFrom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_gravity="left|center_vertical"

            android:layout_marginLeft="0dp"
            android:background="@drawable/message_bg"
            android:maxEms="12"
            android:maxLines="10"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="kdfjhgjfhf"
            android:textColor="#17202A"
            android:textSize="20sp" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>