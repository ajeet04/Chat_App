<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.example.ajeetyadav.chat.LoginActivity">

    <include
        android:id="@+id/login_appbar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_appbar">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@android:color/background_light"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/edit_bg"
                android:hint="Email"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textColorHint="@android:color/background_light"
                android:textSize="24sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@android:color/background_light"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"

                android:hint="Password"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textColorHint="@android:color/background_light"
                android:textSize="24sp"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/user_sign"
            style="@android:style/Widget.Holo.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_below="@+id/password"
            android:layout_marginTop="39dp"
            android:background="@drawable/bg"
            android:elevation="7dp"
            android:text="LOGIN"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="?attr/actionMenuTextColor" />

        <Button
            android:id="@+id/newAc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/user_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="79dp"
            android:background="@drawable/bg"
            android:text="Don't have account? Sing Up"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="20sp" />



    </RelativeLayout>




</RelativeLayout>
